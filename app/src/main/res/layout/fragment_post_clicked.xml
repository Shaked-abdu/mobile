<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pv_postClicked"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Modules.Posts.PostClickedFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_postClicked"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:barrierAllowsGoneWidgets="true"
        app:layout_constrainedHeight="false"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="641dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_titlePostClicked"
                style="@style/tv_titlePostClicked"
                android:contextClickable="false"
                android:isScrollContainer="false"
                android:visibility="visible"
                app:autoSizeTextType="uniform" />

            <TextView
                android:id="@+id/tv_PostOwnerClicked"
                android:layout_width="match_parent"
                android:layout_height="77dp"
                android:layout_margin="8dp"
                android:autoText="true"
                android:contentDescription="@string/post_owner"
                android:contextClickable="false"
                android:gravity="center"
                android:isScrollContainer="false"
                android:textAlignment="center"
                android:textSize="24sp"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/iv_postImageClicked"
                android:layout_width="match_parent"
                android:layout_height="289dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp" />

            <TextView
                android:id="@+id/tv_postClickedDescription"
                android:layout_width="match_parent"
                android:layout_height="146dp"
                android:layout_margin="16dp"
                android:autoText="true"
                android:contextClickable="false"
                android:gravity="center"
                android:textAlignment="textStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="34sp"
                android:visibility="visible" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>

